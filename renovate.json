{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "timezone": "Europe/Berlin",
  "addLabels": [
    "dependencies"
  ],
  "prConcurrentLimit": 5,
  "prHourlyLimit": 0,
  "commitMessagePrefix": "chore(deps): ",
  "automerge": false,
  "dockerfile": {
    "pinDigests": true
  },
  "nuget": {
    "packageRules": [
      {
        // See https://github.com/VerifyTests/Verify/issues/1642
        "description": "Pin Verify version to 31.4.3",
        "matchPackageNames": [
          "Verify.NUnit"
        ],
        "allowedVersions": "31.4.3"
      }
    ]
  },
  "packageRules": [
    {
      "groupName": "all non-major NuGet dependencies",
      "groupSlug": "nuget-non-major",
      "matchManagers": [
        "nuget"
      ],
      "matchPackageNames": [
        "*"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ]
    }
  ]
}