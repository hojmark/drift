{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "timezone": "Europe/Berlin",
  "addLabels": [
    "dependencies"
  ],
  "prConcurrentLimit": 5,
  "commitMessagePrefix": "chore(deps): ",
  "automerge": false,
  "dockerfile": {
    "pinDigests": true
  },
  "packageRules": [
    {
      "groupName": "all non-major NuGet dependencies",
      "groupSlug": "nuget-non-major",
      "matchManagers": [
        "nuget"
      ],
      "matchPackageNames": [
        "*"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ]
    }
  ]
}